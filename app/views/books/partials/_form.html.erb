<%= form_for(@book, as: :book, url: @book.persisted? ? book_path(@book) : books_path) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
  </div>

  <div class="form-group">
    <%= f.label :author %>
    <%= f.text_field :author, class: 'form-control', placeholder: 'Author' %>
  </div>

  <div class="form-group">
    <%= f.label :year %>
    <%= f.text_field :year, class: 'form-control', placeholder: 'Year' %>
  </div>

  <div class="form-group">
    <%= f.label :category %>
    <%= f.select :category_id, options_from_collection_for_select(Category.all.order(:name), :id, :name, @book.try(:category_id)), {}, { class: 'form-control' } %>
  </div>

  <%= submit_tag "Save", class: 'btn btn-primary btn-xl' %>
<% end %>