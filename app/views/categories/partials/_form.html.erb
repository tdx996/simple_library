<%= form_for(@category, as: :category, url: @category.persisted? ? category_path(@category) : categories_path) do |f| %>

  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
  </div>

  <%= submit_tag "Save", class: 'btn btn-primary btn-xl' %>
<% end %>

